---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'] & { lang: string };

const { title, description, pubDate, updatedDate, heroImage, lang } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header lang={lang} />
		<main class="w-[calc(100%-2em)] max-w-full m-0">
			<article>
				<div class="w-full">
					{heroImage && <img class="block mx-auto rounded-full shadow-xl" width={320} src={heroImage} alt="" />}
				</div>
				<div class="w-full md:w-1/3 max-w-full m-auto p-4 text-[var(--gray-dark)]">
					<div class="mb-4 text-center leading-none py-4">
						<div class="mb-4 text-[var(--gray)]">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="italic">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1 class="mb-4">{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer lang={lang}/>
	</body>
</html>
